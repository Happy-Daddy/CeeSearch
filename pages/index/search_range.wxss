.range_main  text{
  color: #a67500;
 font-size: 40rpx;
 padding: 0;
  margin: 0;
  display: inline;
  line-height: 348rpx;
}

.range_explain{
  text-align: center;
  
  color: #666;
  font-size: 34rpx;
  background: #fff0cc;
  border: solid #ffb400 1rpx;
  border-left: none;
  border-right: none;
  padding: 20rpx;
  margin: 0 30rpx;
  margin-bottom: 50rpx;
}

.range_explain text{
  font-size: 40rpx;
  color:#bb8400;
}

