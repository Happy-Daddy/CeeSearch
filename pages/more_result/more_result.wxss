  margin: 20rpx 0;
}

.add_top{
  margin-top: 90rpx;
}


.university_view {
  padding-left: 170rpx;
  background: url(http://p1n6cj41i.bkt.clouddn.com/nologo.png) no-repeat left center;
  background-size: 140rpx;
  display: block;
  height: 140rpx;
  margin: 20rpx 0;
