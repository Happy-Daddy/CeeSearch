#filter_container{
    /* display: none;   */
  position: absolute;
  top: 0;
  z-index: 999;
  background: rgba(250, 250, 250, .9);
  height: 100%;
  width: 100%;
}

.filter_top{
  background: none;
  position: relative;
}
.filter_top button{
  background: none;
}

.filter_type{
  padding: 20rpx;
  padding-left: 0;
  margin-left: 20rpx;
  border-bottom: solid #ddd 1rpx;
  padding-bottom: 30rpx;
}

.filter_type text{
  padding-left: 10rpx;
  font-size: 30rpx;
  color: #666;
   float: left; 
  width: 100%;
  padding-bottom: 15rpx;
}

.filter_type view{
  display: block;
  float: left;
  width: 33.3333%;
  text-align: center;
  overflow: hidden;
  padding: 0 15rpx;
  margin: 10rpx 0;
}

.filter_type view.filter_location{
  color: #00bea1;
  border: none;
  width: auto;
  background: url(http://p1n6cj41i.bkt.clouddn.com/local.svg) no-repeat left center;
  padding-left: 36rpx;
  background-size: 34rpx;
  margin-left: 15rpx;
}

.filter_type view text{
  background: #eee;
  border:solid #c7c7c7 1px;
  border-radius: 10rpx;
  color: #888;
  padding: 20rpx 0;
  font-size: 30rpx;
  display: block;
  /* width: auto; */
  overflow: hidden;
}

.filter_type view.filter_selected text{
  background:rgba(0, 190, 161, .2);
  border-color: #00bea1;
  color: #00bea1;
}

.range_picker{display: inline-block;}
.range{font-size: 32rpx; background: url(http://p1n6cj41i.bkt.clouddn.com/down_arrow.svg) no-repeat center right; padding-right: 36rpx; background-size: 30rpx;}
.range text{font-weight: bold;}