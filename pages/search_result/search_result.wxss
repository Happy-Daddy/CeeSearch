.university_view {
  padding-left: 170rpx;
  background: url(http://p1n6cj41i.bkt.clouddn.com/nologo.png) no-repeat left center;
  background-size: 140rpx;
  display: block;
  height: 140rpx;
  margin: 20rpx 0;
  overflow: hidden;
}

.university_info {
  font-size: 26rpx;
  color: #666;
  margin: 15rpx 0 20rpx 0;
}

.university_tag {
  color: #fff;
  font-size: 28rpx;
  background: #ffd100;
  padding: 4rpx 15rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

.probability {
  background: #cf2700;
  border-radius: 10rpx;
  color: #fff;
  height: 66rpx;
  line-height: 66rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
}

.probability text {
  font-size: 26rpx;
}

.probability text.probability_num {
  font-size: 60rpx;
  float: right;
}

.last_year {
  font-size: 26rpx;
  color: #666;
  display: block;
  padding-bottom: 20rpx;
  border-bottom: solid #ddd 1px;
}

.last_year_num {
  padding: 20rpx 0;
}

.last_year_num view {
  float: left;
  display: block;
  width: 50%;
  text-align: center;
  color: #666;
  font-size: 26rpx;
  font-weight: normal;
}

.last_year_num view text {
  font-size: 48rpx;
  font-weight: normal;
}

.gap {
  background: #00bea1;
  background: -webkit-linear-gradient(left, #00bea1, #efca01);
  color: #fff;
  font-size: 32rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.gap text {
  font-size: 42rpx;
  font-weight: bold;
  float: right;
}

.recommend_field{
  margin: 20rpx 0;
  overflow: hidden;
}

.recommend_university{
  margin: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: solid #ddd 1px;
}

.university_title{
  font-size: 34rpx;
  color: #444;
  font-weight: bold;
}

.u_list .university_tag{
  background: #aaa;
  padding: 0 15rpx;
}

.u_list .university_info{
  margin:6rpx 0 0 0;
}

.recommend_prof{
  font-size: 26rpx;
  color: #666;
}

.score_and_prob view{
  float: left;
  display: block;
  width: 33.33%;
  text-align: center;
   color: #999;
  font-size: 24rpx;
}

.score_and_prob{
 padding: 10rpx 0;
}

.highlight_text{
  display: block;
  font-size: 46rpx;
  color: #666;
}

.risk_index{
  color: #fff;
  padding: 0 5rpx;
  border-radius: 6rpx;
}

.high_risk_text{
  color: #cf2700;
}
.high_risk_background{
  background: #cf2700;
}
.mid_risk_text{
  color: #db8c03;
}
.mid_risk_background{
  background: #db8c03;
}
.low_risk_text{
  color: #2cc084;
}
.low_risk_background{
  background: #2cc084;
}

