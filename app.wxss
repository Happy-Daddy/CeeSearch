/* 菜单集合的首个菜单 */
.list_menu.list_first{
  border-bottom: none;
}

/* 菜单集合的中间菜单 */
.list_menu.list_middle{
  /* border-top: inherit; */
  border-top: none;
  border-bottom: solid #e5e5e5 1rpx;
  margin-top: 0;
  padding-left: 80rpx;
  margin-left: 30rpx;
  background-position: 6rpx center;
}

/* 菜单集合的最后一个菜单 */
.list_menu.list_last,.list_menu:last-of-type{
  /* border-top: inherit; */
  border: none;  
  margin-top: 0;
}

/* 无icon的菜单 */
.list_menu.no_icon{
  padding-left: 0rpx;
  background: none;
}
.list_menu.list_last.no_icon{
  margin-left: 30rpx;
}

/* 没有上间距的菜单 */
.list_menu.margin_top_0{
  margin-top: 0;
}

/* 黄色文字的菜单 */
.list_menu.yellow_text{
  color: #ffb400;
}

