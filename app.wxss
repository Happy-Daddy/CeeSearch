/*=================================== 
菜单列表==============================
===================================== */
.list_menu{
  height: 120rpx;
  line-height: 120rpx;
  font-size: 34rpx;
  background: #fff url(http://p1n6cj41i.bkt.clouddn.com/test.svg) no-repeat 36rpx center;
  background-repeat: no-repeat;
  background-position: 36rpx center;
  background-size: 50rpx;
  color: #666;
  border:solid #e5e5e5 1rpx;
  border-left: none;
  border-right: none;
  padding-left: 110rpx;
  margin-top: 40rpx;
}

/* 带右侧箭头的菜单 */
.list_menu.right_arrow text:after{
  content: url(http://p1n6cj41i.bkt.clouddn.com/right_arrow.svg);
  display: block;
  height: 30rpx;
  width: 30rpx;
  float: right; 
  margin-right: 30rpx;
  margin-top: 5rpx;
}

/* 菜单右侧文字 */
.list_menu.right_arrow text.right_text:after{content: none;}
.list_menu.right_arrow text.right_text{float:right; padding-right: 20rpx; font-size: 36rpx;}



/* 菜单集合的container */
.list_menu_container{
  border: solid #e5e5e5 1rpx;
  border-left: none;
  border-right: none;
  background: #fff;
}

