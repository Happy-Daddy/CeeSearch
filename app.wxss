/**app.wxss**/
@import "wxParse/wxParse.wxss";
.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}

.clearfix {
  zoom: 1;
}

view,text,rich-text,scroll-view {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

.right_border {
  border-right: solid #ddd 1px;
}

.btn_green {
  margin-top: 30rpx;
  color: #fff;
  background: #00bea1;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* radio样式重置 */

.ui-radio radio, .ui-radio checkbox {
  display: none;
  /* width:0; */
}

.ui-radio {
  background: url(http://p1n6cj41i.bkt.clouddn.com/radio_bg.png) no-repeat left center;
  background-size: 34rpx;
  padding-left: 42rpx;
  color: #666;
  font-size: 34rpx;
  margin-right: 20rpx;
}

.ui-radio.active {
  background: url(http://p1n6cj41i.bkt.clouddn.com/radio_bg_c.png) no-repeat left center;
  background-size: 34rpx;
}


/* radio样式2============ */

.ui-radio-list radio, .ui-radio-list checkbox {
  display: none;
  /* width:0; */
}

.ui-radio-list{
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  background: #f4f4f4;
  border: solid #c7c7c7 1rpx;
  height: 52rpx;
  width: 52rpx;
  border-radius: 52rpx;
  display: block;
  margin: 0 auto;
}

.ui-radio-list.ui-radio-list-large{
  height: 60rpx;
  width: 60rpx;
}

.ui-radio-list.ui-radio-list-small{
  height: 46rpx;
  width: 46rpx;

}


.ui-radio-list.active{
  background: #fff;
  border: solid #00bea1 15rpx;
}

navigator{color: #00bea1;}
